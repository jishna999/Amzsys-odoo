<odoo>
    <data>
        <record model="ir.ui.view" id="create_manufacture_form_view">
            <field name="name">create.manufacture.form.view</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//form/sheet" position="before">
                    <header>
                        <button name="action_create_manufacture" string="Create Manufacture Order" type="object"
                                class="oe_highlight"/>
                    </header>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
