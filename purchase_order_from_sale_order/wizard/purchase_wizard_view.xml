<odoo>
    <data>


        <record model="ir.ui.view" id="purchase_wizard_form_view">
            <field name="name">purchase_order_from_sale_order list</field>
            <field name="model">puchase.order</field>
            <field name="arch" type="xml">

                <form>
                    <field name="vendors_id"/>
                    <field name="schedule_date"/>
                    <tree editable="bottom">

                        <field name="sale_order_id">
                            <field name="product_id"/>
                            <field name="description"/>
                            <field name="order_quantity"/>
                            <field name="unit_price"/>
                        </field>

                    </tree>
                    <footer>
                        <button name="action_purchase_order" string="Create Purchase Order" type="object" class="oe_highlight"/>
                        <button  string="Cancel" type="special" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
